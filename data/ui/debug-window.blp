using Gtk 4.0;
using Adw 1;

Adw.Window window {
  default-height: 800;
  default-width: 700;
  content:
    Gtk.Box {
      orientation: vertical;

      Adw.HeaderBar {}

      Adw.PreferencesPage {
        Adw.PreferencesGroup {
          title: _('Actions');

          Gtk.ListBox action-list {
            styles ['boxed-list']
          }
        }
      }
    };
}
