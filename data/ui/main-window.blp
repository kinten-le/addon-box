using Gtk 4.0;
using Adw 1;

menu add_menu {
  section {
    item (_("Detect add-on folder..."), "win.add-addon.add-name")
  }

  section {
    item (_("Import from Workshop..."), "win.add-addon.add-url")
  }
}

menu primary_menu {
  section {
    item {
      custom: 'themeselector';
    }
  }

  section {
    item (_('Reload'), 'win.reload-addons')
  }

  section {
    item (_("Preference"), "win.show-preferences")
    item (_("Keyboard Shortcuts"), "win.show-help-overlay")
    item (_("About Steam VPK"), "win.show-about")
  }
}

template $StvpkMainWindow : Adw.ApplicationWindow {
  default-width: 864;
  default-height: 600;

  Adw.ToastOverlay primary_toast_overlay {
    vexpand: true;

    Adw.Leaflet primary_leaflet {
      can-unfold: false;

      Adw.LeafletPage {
        name: 'addons-page';
        child:
          Gtk.Box {
            orientation: vertical;

            Adw.ToastOverlay {
              vexpand: true;

              Gtk.Overlay {
                [overlay]
                Gtk.Box {
                  orientation: vertical;
                  valign: start;

                  Adw.HeaderBar headerbar {
                    vexpand: false;
                    centering-policy: strict;
                    show-start-title-buttons: false;
                    show-end-title-buttons: false;
                    title-widget:
                      Gtk.CenterBox {

                        [center]
                        Adw.Clamp {
                          maximum-size: 100;

                          Gtk.Box {
                            margin-top: 4;
                            margin-bottom: 4;
                            margin-start: 4;
                            margin-end: 4;
                            orientation: vertical;
                            hexpand: true;
                            halign: fill;
                            valign: start;

                            Gtk.Box {
                              spacing: 8;

                              $StvpkProfileBar profile_bar {
                                valign: center;
                                vexpand: false;
                              }

                              $StvpkInjectButtonSet inject_button_set {
                                valign: start;
                              }
                            }

                            $StvpkHeaderBox headerbox {
                              reveal-toggle: bind ((profile_bar as <$StvpkProfileBar>).primary-button as <Gtk.ToggleButton>);
                            }

                            Gtk.Revealer view_switcher_revealer {
                              transition-type: slide_up;
                              transition-duration: 200;
                              reveal-child: true;
                              child:
                                Adw.ViewSwitcher view_switcher {
                                  name: 'primary-view-switcher';
                                  policy: wide;
                                  stack: primary_view_stack;
                                };
                            }
                          }
                        }
                      };

                    [start]
                    Gtk.MenuButton {
                      valign: start;
                      margin-top: 4;

                      visible: true;
                      margin-start: 4;
                      always-show-arrow: true;
                      label: _('New');
                      menu-model: add_menu;
                      tooltip-text: _('Add or Import add-on');

                      styles ['flat', 'thin-button']
                    }

                    [end]
                    Gtk.WindowControls {
                      valign: start;
                      margin-top: 4;

                      side: end;
                    }

                    [end]
                    Gtk.MenuButton {
                      valign: start;
                      margin-top: 4;

                      icon-name: "open-menu-symbolic";
                      primary: true;
                      popover:
                        Gtk.PopoverMenu primary_menu_popover {
                          menu-model: primary_menu;
                        };

                      tooltip-text: _('Main Menu');
                    }

                    [end]
                    Gtk.ToggleButton {
                      valign: start;
                      margin-top: 4;
                      visible: false;
                      can-focus: true;
                      icon-name: "system-search-symbolic";
                    }
                  }
                }

                child:
                  Gtk.Box {
                    orientation: vertical;

                    Gtk.Box {
                      // barebone recreation to add space.
                      // Currently no way to set height programmatically
                      sensitive: false;
                      orientation: vertical;
                      margin-top: 8;
                      margin-bottom: 8;
                      spacing: 16;

                      Gtk.Box {
                        spacing: 8;

                        $StvpkProfileBar {
                          valign: center;
                          vexpand: false;
                        }

                        $StvpkInjectButtonSet {
                          valign: start;
                        }
                      }

                      Adw.ViewSwitcher {
                        sensitive: false;
                        name: 'primary-view-switcher';
                        policy: wide;
                        stack: primary_view_stack;
                      }
                    }

                    Adw.ViewStack primary_view_stack {
                      vexpand: true;

                      Adw.ViewStackPage {
                        name: "main-page";
                        title: _("Load-order");
                        icon-name: "map-symbolic";
                        child: $StvpkLaunchpadPage launchpad_page {};
                      }

                      Adw.ViewStackPage {
                        name: "download-page";
                        title: _("Browse");
                        icon-name: "harddisk-symbolic";
                        child: $StvpkDownloadPage download_page {};
                      }
                    }
                  };
              }
            }

            Adw.ViewSwitcherBar {
              stack: primary_view_stack;
              reveal: false;
            }
          };
      } // adwleafletpage

      Adw.LeafletPage {
        name: 'addon-details-page';
        child: $StvpkAddonDetails addon_details {};
      }

      Adw.LeafletPage tertiary-page {
        name: 'addons-panel-disk-page';
        child: $StvpkAddonsPanelDisk addons_panel_disk {};
      }
    }
  }
}
