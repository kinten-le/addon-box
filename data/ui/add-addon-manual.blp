using Gtk 4.0;
using Adw 1;

template $StvpkAddAddonManual : Adw.PreferencesPage {
        vexpand: true;

        Adw.PreferencesGroup name {
          Adw.EntryRow {
            sensitive: true;
            title: _("Add-on Name");
          }

          Gtk.Label {
            label: _('A human-readable name. It can contain non-ASCII characters.');
            xalign: 0; // left align
            margin-top: 12;
            wrap: true;
            styles ["dim-label", "caption"]
          }
        }

        Adw.PreferencesGroup {
          Adw.EntryRow stvpkid {
            sensitive: true;
            title: _("Add-on ID");
            text: "mw19-famas@mav";
          }

          Gtk.Label {
            label: _('An email-address-like string used to identify the add-on and its resources, such as "ram7-rifle@marumori7". It is made up of three parts - the add-on name, the symbol @, and the author name.');
            xalign: 0; // left align
            margin-top: 12;
            wrap: true;


            styles ["dim-label", "caption"]
          }

          // show a recta
        }

        Adw.PreferencesGroup {
          Adw.ActionRow {
            title: _("Include in profile");
            subtitle: _("Once download is finished, this add-on will be included in the current profile.");

            [suffix]
            Gtk.Switch {
              valign: center;
              halign: center;
              active: true;
            }
          }
        }

        Adw.PreferencesGroup {
          Gtk.Box {
            spacing: 12;

            Gtk.Label {
              hexpand: true;
              valign: center;
              wrap: true;
              xalign: 0;
              label: "";
              styles ["dim-label"]
            }

            Gtk.Button download_button {
              label: _("Create");
              action-name: "add-addon.download";
              valign: center;
              styles ["suggested-action"]
            }
          }
        }
  }
