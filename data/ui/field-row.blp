using Gtk 4.0;
using Adw 1;

template $StvpkFieldRow : Adw.ActionRow {
  title: _('File ID'); // placeholder
  value: '2396847377'; // placeholder

  [suffix]
  Gtk.Label {
    use-markup: true;
    label: bind template.value as <string>;
    styles ['dim-label', 'monospace']
    ellipsize: middle;
    lines: 1;
    justify: right;
    margin-top: 8;
    margin-bottom: 4;
    margin-start: 8;
    selectable: true;
  }
}
