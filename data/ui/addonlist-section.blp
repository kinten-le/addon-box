using Gtk 4.0;
using Adw 1;

template AddonlistSection : Gtk.Box {
  orientation: vertical;
  spacing: 10;

  Gtk.Label section_label {
    label: bind AddonlistSection.title;
    xalign: 0;
    styles ["heading"]
  }

  Gtk.ListBox section_list {
    selection-mode: none;
    valign: start;

    styles ["boxed-list"]
  }
}
